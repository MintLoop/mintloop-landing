---
import "../../styles/global.css";
import DivisionHero from "../../components/DivisionHero.astro";
import MintyClicker from "../../components/islands/MintyClicker.tsx";
---

<DivisionHero
  theme="theme-mintlabs"

  subtitle="Where weird ships - tiny games, creative experiments, cultural drops."
  logo="/SVG/MintLabs.svg"
  ctaHref="/mintlabs/minty"
  ctaLabel="Farm MintyCatCoins" />

<section class="mx-auto max-w-2xl px-4 py-10 text-white">
  <div class="grid gap-5 sm:grid-cols-2">
    <a href="/mintlabs/minty" class="rounded-2xl border p-5 hover:shadow-xl" style="border-color:var(--stroke);background:var(--card);">
      <h3 class="font-semibold">$MINTY</h3>
      <p class="mt-1 text-sm text-zinc-300">Cat's out of the bag! Grab yourself a bag by farming MintCoins! Play games while farming crypto!</p>
    </a>
    <a href="/mintlabs/catsout" class="rounded-2xl border p-5 hover:shadow-xl" style="border-color:var(--stroke);background:var(--card);">
      <h3 class="font-semibold">Cat's Out</h3>
      <p class="mt-1 text-sm text-zinc-300">Arcade game coming soon!.</p>
    </a>
  </div>
</section>

<!-- Theme the page purple -->
<section class="theme-mintlabs mx-auto max-w-5xl px-4 py-10 text-white">
  <h1 class="text-3xl font-bold">$MINTY</h1>
  <p class="mt-2 text-zinc-300">Playful clicker that unlocks Cat's Out once you fill the meter.</p>

  <div class="mt-6">
    <MintyClicker client:load />
  </div>

  <div class="mt-8 rounded-2xl border p-5" style="border-color:var(--stroke);background:var(--card);">
    <h2 class="font-semibold">What is this?</h2>
    <p class="mt-1 text-sm text-zinc-300">
      A tiny Labs experiment. No wallet, no tokens. Just vibes. When it hits {10} pops, you'll unlock a link to Cat's Out.
    </p>
  </div>
</section>
