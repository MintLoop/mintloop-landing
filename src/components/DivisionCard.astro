---
const { theme = "theme-mintworks", title, blurb, href = "#", logo = "/mintworks.png", tag = "" } = Astro.props;
---

<a href={href}
   class={`group relative rounded-2xl border p-5 transition hover:shadow-xl ${theme}`}
   style="border-color: var(--stroke); background: var(--card);">
  <div class="mb-3 inline-flex items-center gap-3">
    <img src={logo} alt={`${title} logo`} class="h-8 w-auto" />
    <span class="text-brand text-sm font-semibold">{tag}</span>
  </div>
  <div class="flex items-center justify-between">
    <h3 class="text-lg font-semibold text-white">{title}</h3>
    <span class="text-zinc-400 group-hover:text-brand">â†—</span>
  </div>
  <p class="mt-2 text-sm text-zinc-300">{blurb}</p>
</a>
